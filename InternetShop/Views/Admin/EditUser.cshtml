@model InternetShop.Models.User
<p>
    <h3 class="text-success">Корректировка пользователя</h3>
</p>

<Form method="post" action="/Admin/EditUser">
    <div class="form-group">
        <label for="id" class="text-primary">Id</label>
        <input class="form-control " name="Id" value="@Model.Id" id="id" aria-describedby="idHelp" readonly>
        <small id="idHelp" class="form-text text-muted">Id пользователя</small>
    </div>
    <div class="form-group">
        <label for="loginId" class="text-primary">Логин</label>
        <input class="form-control" name="Login" value="@Model.Login" id="loginId" aria-describedby="loginHelp">
        <small id="loginHelp" class="form-text text-muted">Введите логин для входа в сеть(max 10 симв, обяз.ввод)</small>
        <p class="text-danger">@Html.ValidationMessageFor(m => m.Login)</p>
    </div>
    <div class="form-group">
        <label for="passwordId" class="text-primary">Пароль</label>
        <input class="form-control" name="Password" value="@Model.Password" id="passwordId" aria-describedby="passwordHelp">
        <small id="passwordHelp" class="form-text text-muted">Введите пароль для входа в сеть(max 8 симв, обяз.ввод)</small>
        <p class="text-danger">@Html.ValidationMessageFor(m => m.Password)</p>
    </div>
    <h5 class="text-danger">@ViewBag.Message</h5>
    <button class="btn-primary btn-lg" type="submit">Изменить</button>
</Form>