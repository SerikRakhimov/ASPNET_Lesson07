<p>
    <h3 class="text-success">Вход в систему</h3>
</p>

<Form method="post" action="/Home/LoginUser">
    <div class="form-group">
        <label for="loginId" class="text-primary">Логин</label>
        <input class="form-control" name="Login" value = "@ViewBag.Login" id="loginId" aria-describedby="loginHelp">
        <small id="loginHelp" class="form-text text-muted">Введите логин</small>
    </div>
    <div class="form-group">
        <label for="passwordId" class="text-primary">Пароль</label>
        <input class="form-control" name="Password" value="@ViewBag.Password" type="password" id="passwordId" aria-describedby="passwordHelp">
        <small id="passwordHelp" class="form-text text-muted">Введите пароль</small>
    </div>
     <h5 class="text-danger">@ViewBag.Message</h5>
    <button class="btn-primary btn-lg" type="submit">Войти</button>
</Form>