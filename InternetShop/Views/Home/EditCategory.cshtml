@model InternetShop.Models.Category
<p>
    <h3 class="text-success">Корректировка категории продукта</h3>
</p>

<Form method="post" action="/Home/EditCategory">
    <div class="form-group">
        <label for="id" class="text-primary">Id</label>
        <input class="form-control " name="Id" value="@Model.Id" id="id" aria-describedby="idHelp" readonly>
        <small id="idHelp" class="form-text text-muted">Id продукта</small>
    </div>
    <div class="form-group">
        <label for="nameId" class="text-primary">Наименование</label>
        <input class="form-control" name="Name" value="@Model.Name" id="nameId" aria-describedby="nameHelp">
        <small id="nameHelp" class="form-text text-muted">Введите наименование категории(max 50 симв, обяз.ввод)</small>
        <p class="text-danger">@Html.ValidationMessageFor(m => m.Name)</p>
    </div>
    <button class="btn-primary btn-lg" type="submit">Изменить</button>
</Form>