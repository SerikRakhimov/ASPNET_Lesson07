<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" >
        <span class="navbar-text">
            <b> @Session["userMain"]</b>
        </span>
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Интернет-магазин", "Products", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Список категорий тооваров", "Categories", "Home")</li>
                    <li>@Html.ActionLink("Список товаров общий", "Products", "Home")</li>
                    <li>@Html.ActionLink("По категории постранично", "FormFilter", "Home")</li>
                    <li>@Html.ActionLink("Пользователи", "Users", "Admin")</li>
                    <li>@Html.ActionLink("Войти в систему", "LoginUser", "Home")</li>
                    <li>@Html.ActionLink("Регистрация", "RegistrationUser", "Home")</li>
                    <li>@Html.ActionLink("Выйти из системы", "LogoutUser", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer>
            <hr>
            <h5 class="text-info"><i>Разработчик Рахимов Серик</i></h5>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
